<style>
  .testingStuff {
    display: flex;
  }
  .phoneImage {
    width: 40%;
  }
  .itemDetails {
    width: 100%;
  }
  .itemDetails a {
    color: black;
  }
</style>


<div class="container">
  {{# if products}}
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3 mt-5">
        <ul class="list-group">
          {{# each products }}
            <li class="list-group-item px-5 testingStuff">
              <div class="phoneImage">
                <img src="{{this.item.imagePath}}" alt="{{this.item.title}}" style="max-height:200px">
              </div>

              <div class="itemDetails">
                <h3 class="h2">{{this.item.title}}</h3>
                <p class="h3 my-4">$ {{this.price}}</p>
                <p class="label label-info">{{this.qty}}</p>
                {{!-- reduce and remove --}}
                <p class="mt-4">
                  <a href="/reduce/{{this.item._id}}">
                    <i class="fa fa-minus-square fa-2x" aria-hidden="true"></i>
                  </a>
                  <a href="/remove/{{this.item._id}}">
                    <i class="fa fa-trash fa-2x px-2" aria-hidden="true"></i>
                  </a>
                </p>
              </div>
            </li>
     
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="row">
      <p class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total: ${{ totalPrice }}</strong>
      </p>
    </div>
    <hr>
    <div class="row">
      <p class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
      </p>
    </div>
  {{ else }}
    <div class="row">
      <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Items in Cart</h2>
      </div>
    </div>
  {{/if}}
</div>


